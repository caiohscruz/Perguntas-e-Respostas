<div class="container">
    <div class="card" id="formulario-pergunta">
        <div class="card-header">
            <h3>Realizar pergunta</h3>
        </div>
        <div class="card-body">
            <hr>
            <form method="POST">
                <label for="titulo">Título</label>
                <input type="text" id="titulo" name="titulo" placeholder="Título" class="form-control"/>
                <br>
                <label for="descricao">Descrição</label>
                <textarea id="descricao" name="descricao" placeholder="Descreva sua pergunta aqui" class="form-control"></textarea>
                <br>
                <button class="btn btn-primary">Perguntar</button>
            </form>                
        </div>
    </div>
</div>